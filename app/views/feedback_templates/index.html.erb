<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All feedbacks
    </h1>

    <a href="/feedbacks/new" class="btn btn-block btn-outline-secondary">
      Add a new feedback
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Task
        </th>

        <th>
          Comment
        </th>

        <th>
          Ratings
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @feedbacks.each do |feedback| %>
      <tr>
        <!-- Display feedback.id start -->
        <td>
          <%= feedback.id %>
        </td>
        <!-- Display feedback.id end -->

        <!-- Display feedback.task_id start -->
        <td>
          <% if feedback.task.present? %>
            <a href="/tasks/<%= feedback.task.id %>">
              <%= feedback.task.adult_id %>
            </a>
          <% end %>
        </td>
        <!-- Display feedback.task_id end -->

        <!-- Display feedback.comment start -->
        <td>
          <%= feedback.comment %>
        </td>
        <!-- Display feedback.comment end -->

        <!-- Display feedback.ratings start -->
        <td>
          <%= feedback.ratings %>
        </td>
        <!-- Display feedback.ratings end -->

        <!-- Display feedback.created_at start -->
        <td>
          <%= time_ago_in_words(feedback.created_at) %> ago
        </td>
        <!-- Display feedback.created_at end -->

        <!-- Display feedback.updated_at start -->
        <td>
          <%= time_ago_in_words(feedback.updated_at) %> ago
        </td>
        <!-- Display feedback.updated_at end -->

        <td>
          <a href="/feedbacks/<%= feedback.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @feedbacks, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
