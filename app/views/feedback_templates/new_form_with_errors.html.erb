<% if @feedback.present? %>
  <% if @feedback.errors.any? %>
    <% @feedback.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new feedback
</h1>


<hr>

<form action="/create_feedback" method="post">

  <div class="form-group">
    <label for="task_id">
      Task
    </label>

    <%= select_tag(:task_id, options_from_collection_for_select(Task.all, :id, :adult_id, @feedback.task_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="comment">
      Comment
    </label>

    <input type="text" id="comment" name="comment" class="form-control" value="<%= @feedback.comment %>">
  </div>

  <div class="form-group">
    <label for="ratings">
      Ratings
    </label>

    <input type="text" id="ratings" name="ratings" class="form-control" value="<%= @feedback.ratings %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create feedback
  </button>
</form>

<hr>

<a href="/feedbacks">
  Go back
</a>
