<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All messages
    </h1>

    <a href="/messages/new" class="btn btn-block btn-outline-secondary">
      Add a new message
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Sender
        </th>

        <th>
          Recipient
        </th>

        <th>
          Task
        </th>

        <th>
          Message
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @messages.each do |message| %>
      <tr>
        <!-- Display message.id start -->
        <td>
          <%= message.id %>
        </td>
        <!-- Display message.id end -->

        <!-- Display message.sender_id start -->
        <td>
          <%= message.sender_id %>
        </td>
        <!-- Display message.sender_id end -->

        <!-- Display message.recipient_id start -->
        <td>
          <%= message.recipient_id %>
        </td>
        <!-- Display message.recipient_id end -->

        <!-- Display message.task_id start -->
        <td>
          <%= message.task_id %>
        </td>
        <!-- Display message.task_id end -->

        <!-- Display message.message start -->
        <td>
          <%= message.message %>
        </td>
        <!-- Display message.message end -->

        <!-- Display message.created_at start -->
        <td>
          <%= time_ago_in_words(message.created_at) %> ago
        </td>
        <!-- Display message.created_at end -->

        <!-- Display message.updated_at start -->
        <td>
          <%= time_ago_in_words(message.updated_at) %> ago
        </td>
        <!-- Display message.updated_at end -->

        <td>
          <a href="/messages/<%= message.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
