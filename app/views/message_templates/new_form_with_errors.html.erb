<% if @message.present? %>
  <% if @message.errors.any? %>
    <% @message.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new message
</h1>


<hr>

<form action="/create_message" method="post">

  <div class="form-group">
    <label for="sender_id">
      Sender
    </label>

    <%= select_tag(:sender_id, options_from_collection_for_select(User.all, :id, :created_at, @message.sender_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="recipient_id">
      Recipient
    </label>

    <%= select_tag(:recipient_id, options_from_collection_for_select(User.all, :id, :created_at, @message.recipient_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="task_id">
      Task
    </label>

    <%= select_tag(:task_id, options_from_collection_for_select(Task.all, :id, :adult_id, @message.task_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="message">
      Message
    </label>

    <input type="text" id="message" name="message" class="form-control" value="<%= @message.message %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create message
  </button>
</form>

<hr>

<a href="/messages">
  Go back
</a>
