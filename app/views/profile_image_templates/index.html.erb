<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All profile images
    </h1>

    <a href="/profile_images/new" class="btn btn-block btn-outline-secondary">
      Add a new profile image
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "profile_image_templates/profile_images_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Image upload
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @profile_images.each do |profile_image| %>
      <tr>
        <td>
          <%= profile_image.id %>
        </td>

        <td>
          <%= profile_image.image_upload %>
        </td>

        <td>
          <% if profile_image.user.present? %>
            <a href="/users/<%= profile_image.user.id %>">
              <%= profile_image.user.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(profile_image.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(profile_image.updated_at) %> ago
        </td>

        <td>
          <a href="/profile_images/<%= profile_image.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @profile_images, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
