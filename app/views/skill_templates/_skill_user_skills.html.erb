<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    User Skills

    <a data-toggle="collapse" href="#skill_user_skills_new_form">
      Add user skill
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @skill.user_skills.each do |user_skill| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/user_skills/<%= user_skill.id %>">
          <%= user_skill.skill_id %>
        </a>

        <a href="/delete_user_skill_from_skill/<%= user_skill.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="skill_user_skills_new_form">
        <%= render partial: "skill_templates/skill_user_skills_new_form" %>
      </div>
    </div>

  </ul>
</div>
