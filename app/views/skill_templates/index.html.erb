<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All skills
    </h1>

    <a href="/skills/new" class="btn btn-block btn-outline-secondary">
      Add a new skill
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @skills.each do |skill| %>
      <tr>
        <!-- Display skill.id start -->
        <td>
          <%= skill.id %>
        </td>
        <!-- Display skill.id end -->

        <!-- Display skill.name start -->
        <td>
          <%= skill.name %>
        </td>
        <!-- Display skill.name end -->

        <!-- Display skill.created_at start -->
        <td>
          <%= time_ago_in_words(skill.created_at) %> ago
        </td>
        <!-- Display skill.created_at end -->

        <!-- Display skill.updated_at start -->
        <td>
          <%= time_ago_in_words(skill.updated_at) %> ago
        </td>
        <!-- Display skill.updated_at end -->

        <td>
          <a href="/skills/<%= skill.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
