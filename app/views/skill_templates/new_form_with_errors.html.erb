<!-- Validation failure messages -->
<% if @skill.present? %>
  <% if @skill.errors.any? %>
    <% @skill.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new skill
</h1>


<hr>

<!-- Form skill start -->
<form action="/create_skill" method="post">
<!-- Form skill end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @skill.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <button class="btn btn-block btn-outline-secondary">
    Create skill
  </button>
</form>

<hr>

<a href="/skills">
  Go back
</a>
