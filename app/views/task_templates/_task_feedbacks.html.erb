<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Feedbacks

    <a data-toggle="collapse" href="#task_feedbacks_new_form">
      Add feedback
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @task.feedbacks.each do |feedback| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/feedbacks/<%= feedback.id %>">
          <%= feedback.task_id %>
        </a>

        <a href="/delete_feedback_from_task/<%= feedback.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="task_feedbacks_new_form">
        <%= render partial: "task_templates/task_feedbacks_new_form" %>
      </div>
    </div>

  </ul>
</div>
