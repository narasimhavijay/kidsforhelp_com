<form action="/create_feedback_from_task" method="post">

  <input type="hidden" name="task_id" value="<%= @task.id %>">

  <div class="form-group">
    <label for="comment">
      Comment
    </label>

    <input type="text" id="comment" name="comment" class="form-control" value="<%= @feedback.comment %>">
  </div>

  <div class="form-group">
    <label for="ratings">
      Ratings
    </label>

    <input type="text" id="ratings" name="ratings" class="form-control" value="<%= @feedback.ratings %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create feedback
  </button>
</form>
