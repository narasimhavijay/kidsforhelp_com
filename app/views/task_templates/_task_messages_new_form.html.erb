<form action="/create_message_from_task" method="post">

  <div class="form-group">
    <label for="sender_id">
      Sender
    </label>

    <%= select_tag(:sender_id, options_from_collection_for_select(User.all, :id, :created_at, @message.sender_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="recipient_id">
      Recipient
    </label>

    <%= select_tag(:recipient_id, options_from_collection_for_select(User.all, :id, :created_at, @message.recipient_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="task_id" value="<%= @task.id %>">

  <div class="form-group">
    <label for="message">
      Message
    </label>

    <input type="text" id="message" name="message" class="form-control" value="<%= @message.message %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create message
  </button>
</form>
