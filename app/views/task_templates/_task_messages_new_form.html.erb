<!-- Form message start -->
<form action="/create_message_from_task" method="post">
<!-- Form message end -->

  <!-- Label and input for sender_id start -->
  <div class="form-group">
    <label for="sender_id">
      Sender
    </label>

    <!-- Input for sender_id start -->
    <%= select_tag(:sender_id, options_from_collection_for_select(User.all, :id, :created_at, @message.sender_id), :class => "form-control") %>
    <!-- Input for sender_id end -->
  </div>
  <!-- Label and input for sender_id end -->

  <!-- Label and input for recipient_id start -->
  <div class="form-group">
    <label for="recipient_id">
      Recipient
    </label>

    <!-- Input for recipient_id start -->
    <%= select_tag(:recipient_id, options_from_collection_for_select(User.all, :id, :created_at, @message.recipient_id), :class => "form-control") %>
    <!-- Input for recipient_id end -->
  </div>
  <!-- Label and input for recipient_id end -->

  <!-- Label and input for task_id start -->
  <!-- Input for task_id start -->
  <input type="hidden" name="task_id" value="<%= @task.id %>">
  <!-- Input for task_id end -->

  <!-- Label and input for message start -->
  <div class="form-group">
    <label for="message">
      Message
    </label>

    <!-- Input for message start -->
    <input type="text" id="message" name="message" class="form-control" value="<%= @message.message %>">
    <!-- Input for message end -->
  </div>
  <!-- Label and input for message end -->

  <button class="btn btn-block btn-outline-secondary">
    Create message
  </button>
</form>
