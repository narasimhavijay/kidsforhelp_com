<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All tasks
    </h1>

    <a href="/tasks/new" class="btn btn-block btn-outline-secondary">
      Add a new task
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Adult
        </th>

        <th>
          Kid
        </th>

        <th>
          Status
        </th>

        <th>
          Task desc
        </th>

        <th>
          Image uploads
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @tasks.each do |task| %>
      <tr>
        <!-- Display task.id start -->
        <td>
          <%= task.id %>
        </td>
        <!-- Display task.id end -->

        <!-- Display task.adult_id start -->
        <td>
          <%= task.poster.created_at %>
        </td>
        <!-- Display task.adult_id end -->

        <!-- Display task.kid_id start -->
        <td>
          <%= task.kid_id %>
        </td>
        <!-- Display task.kid_id end -->

        <!-- Display task.status start -->
        <td>
          <%= task.status %>
        </td>
        <!-- Display task.status end -->

        <!-- Display task.task_desc start -->
        <td>
          <%= task.task_desc %>
        </td>
        <!-- Display task.task_desc end -->

        <!-- Display task.image_uploads start -->
        <td>
          <%= task.image_uploads %>
        </td>
        <!-- Display task.image_uploads end -->

        <!-- Display task.created_at start -->
        <td>
          <%= time_ago_in_words(task.created_at) %> ago
        </td>
        <!-- Display task.created_at end -->

        <!-- Display task.updated_at start -->
        <td>
          <%= time_ago_in_words(task.updated_at) %> ago
        </td>
        <!-- Display task.updated_at end -->

        <td>
          <a href="/tasks/<%= task.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
