<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All user skills
    </h1>

    <a href="/user_skills/new" class="btn btn-block btn-outline-secondary">
      Add a new user skill
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Skill
        </th>

        <th>
          Kid
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @user_skills.each do |user_skill| %>
      <tr>
        <!-- Display user_skill.id start -->
        <td>
          <%= user_skill.id %>
        </td>
        <!-- Display user_skill.id end -->

        <!-- Display user_skill.skill_id start -->
        <td>
          <% if user_skill.skill.present? %>
            <a href="/skills/<%= user_skill.skill.id %>">
              <%= user_skill.skill.name %>
            </a>
          <% end %>
        </td>
        <!-- Display user_skill.skill_id end -->

        <!-- Display user_skill.kid_id start -->
        <td>
          <% if user_skill.kid.present? %>
            <a href="/users/<%= user_skill.kid.id %>">
              <%= user_skill.kid.created_at %>
            </a>
          <% end %>
        </td>
        <!-- Display user_skill.kid_id end -->

        <!-- Display user_skill.created_at start -->
        <td>
          <%= time_ago_in_words(user_skill.created_at) %> ago
        </td>
        <!-- Display user_skill.created_at end -->

        <!-- Display user_skill.updated_at start -->
        <td>
          <%= time_ago_in_words(user_skill.updated_at) %> ago
        </td>
        <!-- Display user_skill.updated_at end -->

        <td>
          <a href="/user_skills/<%= user_skill.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @user_skills, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
