<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All user skills
    </h1>

    <a href="/user_skills/new" class="btn btn-block btn-outline-secondary">
      Add a new user skill
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "user_skill_templates/user_skills_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Skill
        </th>

        <th>
          Kid
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @user_skills.each do |user_skill| %>
      <tr>
        <td>
          <%= user_skill.id %>
        </td>

        <td>
          <% if user_skill.skill.present? %>
            <a href="/skills/<%= user_skill.skill.id %>">
              <%= user_skill.skill.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if user_skill.kid.present? %>
            <a href="/users/<%= user_skill.kid.id %>">
              <%= user_skill.kid.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(user_skill.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(user_skill.updated_at) %> ago
        </td>

        <td>
          <a href="/user_skills/<%= user_skill.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @user_skills, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
