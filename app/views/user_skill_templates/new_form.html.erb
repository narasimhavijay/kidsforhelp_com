<h1>
  Add a new user skill
</h1>


<hr>

<form action="/create_user_skill" method="post">

  <div class="form-group">
    <label for="skill_id">
      Skill
    </label>

    <%= select_tag(:skill_id, options_from_collection_for_select(Skill.all, :id, :name, @user_skill.skill_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="kid_id">
      Kid
    </label>

    <%= select_tag(:kid_id, options_from_collection_for_select(User.all, :id, :created_at, @user_skill.kid_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create user skill
  </button>
</form>

<hr>

<a href="/user_skills">
  Go back
</a>
