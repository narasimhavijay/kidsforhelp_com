<h1>
  Add a new user skill
</h1>


<hr>

<!-- Form user_skill start -->
<form action="/create_user_skill" method="post">
<!-- Form user_skill end -->

  <!-- Label and input for skill_id start -->
  <div class="form-group">
    <label for="skill_id">
      Skill
    </label>

    <!-- Input for skill_id start -->
    <%= select_tag(:skill_id, options_from_collection_for_select(Skill.all, :id, :name, @user_skill.skill_id), :class => "form-control") %>
    <!-- Input for skill_id end -->
  </div>
  <!-- Label and input for skill_id end -->

  <!-- Label and input for kid_id start -->
  <div class="form-group">
    <label for="kid_id">
      Kid
    </label>

    <!-- Input for kid_id start -->
    <%= select_tag(:kid_id, options_from_collection_for_select(User.all, :id, :created_at, @user_skill.kid_id), :class => "form-control") %>
    <!-- Input for kid_id end -->
  </div>
  <!-- Label and input for kid_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create user skill
  </button>
</form>

<hr>

<a href="/user_skills">
  Go back
</a>
