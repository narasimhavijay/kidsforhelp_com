<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      User skill #<%= @user_skill.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/user_skills" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/user_skills/<%= @user_skill.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit user skill
        </a>
      </div>

      <div class="col">
        <a href="/delete_user_skill/<%= @user_skill.id %>" class="btn btn-block btn-outline-secondary">
          Delete user skill
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Skill
      </dt>
      <dd>
        <% if @user_skill.skill.present? %>
          <a href="/skills/<%= @user_skill.skill_id %>">
            <%= @user_skill.skill.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Kid
      </dt>
      <dd>
        <% if @user_skill.kid.present? %>
          <a href="/users/<%= @user_skill.kid_id %>">
            <%= @user_skill.kid.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@user_skill.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@user_skill.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

