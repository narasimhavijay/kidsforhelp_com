<h1>
  Edit User #<%= @user.first_name %>
</h1>

<hr>

<form action="/update_user/<%= @user.id %>" method="post">

  <div class="form-group">
    <label for="AL1">
      Address Line1
    </label>

    <input type="text" id="AL1" name="address_line1" class="form-control" value="<%= @user.address_line1 %>">
  </div>

  <div class="form-group">
    <label for="AL2"> Address Line 2 
    </label>

    <input type="text" id="AL2" name="address_line2" class="form-control" value="<%= @user.address_line2 %>">
  </div>

  <div class="form-group">
    <label for="city"> City
    </label>

    <input type="text" id="city" name="city" class="form-control" value="<%= @user.city %>">
  </div>
  
  <div class="form-group">
    <label for="state"> State
    </label>

    <input type="state" id="state" name="state" class="form-control" value="<%= @user.state %>">
  </div>
  
  <div class="form-group">
    <label for="country"> Country
    </label>

    <input type="country" id="country" name="country" class="form-control" value="<%= @user.country %>">
  </div>
  
  <div class="form-group">
    <label for="Nname"> Neighborhoodname
    </label>

    <input type="Nname" id="Nname" name="Nname" class="form-control" value="<%= @user.neighborhoodname %>">
  </div>
  
  <div class="form-group">
    <label for="image">
      Profile Image
    </label>

    <input type="text" id="image" name="image" class="form-control" value="<%= @user.profile_image %>">
  </div>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @user.id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update User
  </button>
</form>

<hr>

<a href="/photos">
  Go back
</a>

