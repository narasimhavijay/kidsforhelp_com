<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All users
    </h1>

    <a href="/users/new" class="btn btn-block btn-outline-secondary">
      Add a new user
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Address line1
        </th>

        <th>
          Address line2
        </th>

        <th>
          City
        </th>

        <th>
          State
        </th>

        <th>
          Zipcode
        </th>

        <th>
          Country
        </th>

        <th>
          Neighborhoodname
        </th>

        <th>
          Profile image
        </th>

        <th>
          User type
        </th>

        <th>
          First name
        </th>

        <th>
          Email
        </th>

        <th>
          Password
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <!-- Display user.id start -->
        <td>
          <%= user.id %>
        </td>
        <!-- Display user.id end -->

        <!-- Display user.address_line1 start -->
        <td>
          <%= user.address_line1 %>
        </td>
        <!-- Display user.address_line1 end -->

        <!-- Display user.address_line2 start -->
        <td>
          <%= user.address_line2 %>
        </td>
        <!-- Display user.address_line2 end -->

        <!-- Display user.city start -->
        <td>
          <%= user.city %>
        </td>
        <!-- Display user.city end -->

        <!-- Display user.state start -->
        <td>
          <%= user.state %>
        </td>
        <!-- Display user.state end -->

        <!-- Display user.zipcode start -->
        <td>
          <%= user.zipcode %>
        </td>
        <!-- Display user.zipcode end -->

        <!-- Display user.country start -->
        <td>
          <%= user.country %>
        </td>
        <!-- Display user.country end -->

        <!-- Display user.neighborhoodname start -->
        <td>
          <%= user.neighborhoodname %>
        </td>
        <!-- Display user.neighborhoodname end -->

        <!-- Display user.profile_image start -->
        <td>
          <img src='<%= user.profile_image %>' class='img-fluid'>
        </td>
        <!-- Display user.profile_image end -->

        <!-- Display user.user_type start -->
        <td>
          <%= user.user_type %>
        </td>
        <!-- Display user.user_type end -->

        <!-- Display user.first_name start -->
        <td>
          <%= user.first_name %>
        </td>
        <!-- Display user.first_name end -->

        <!-- Display user.email start -->
        <td>
          <%= user.email %>
        </td>
        <!-- Display user.email end -->

        <!-- Display user.password start -->
        <td>
          <%= user.password %>
        </td>
        <!-- Display user.password end -->

        <!-- Display user.created_at start -->
        <td>
          <%= time_ago_in_words(user.created_at) %> ago
        </td>
        <!-- Display user.created_at end -->

        <!-- Display user.updated_at start -->
        <td>
          <%= time_ago_in_words(user.updated_at) %> ago
        </td>
        <!-- Display user.updated_at end -->

        <td>
          <a href="/users/<%= user.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
