<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All users
    </h1>

    <a href="/users/new" class="btn btn-block btn-outline-secondary">
      Add a new user
    </a>
  </div>
</div>





<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Address line1
        </th>

        <th>
          Address line2
        </th>

        <th>
          City
        </th>

        <th>
          State
        </th>

        <th>
          Zipcode
        </th>

        <th>
          Country
        </th>

        <th>
          Neighborhoodname
        </th>

        <th>
          Profile image
        </th>

        <th>
          User type
        </th>

        <th>
          First name
        </th>

        <th>
          Email
        </th>

        <th>
          Password
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.id %>
        </td>

        <td>
          <%= user.address_line1 %>
        </td>

        <td>
          <%= user.address_line2 %>
        </td>

        <td>
          <%= user.city %>
        </td>

        <td>
          <%= user.state %>
        </td>

        <td>
          <%= user.zipcode %>
        </td>

        <td>
          <%= user.country %>
        </td>

        <td>
          <%= user.neighborhoodname %>
        </td>

        <td>
          <img src='<%= user.profile_image %>' class='img-fluid'>
        </td>

        <td>
          <%= user.user_type %>
        </td>

        <td>
          <%= user.first_name %>
        </td>

        <td>
          <%= user.email %>
        </td>

        <td>
          <%= user.password %>
        </td>

        <td>
          <%= time_ago_in_words(user.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(user.updated_at) %> ago
        </td>

        <td>
          <a href="/users/<%= user.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @users, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
