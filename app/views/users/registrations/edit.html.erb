              <% else %>
                <% country_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :country %>

            <%= f.text_field :country, :class => country_class, :placeholder => "Enter country" %>

            <% if country_was_invalid %>
              <% resource.errors.full_messages_for(:country).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          
          <div class="form-group">
            <% neighborhoodname_was_invalid = resource.errors.include?(:neighborhoodname) %>

            <% neighborhoodname_class = "form-control" %>

            <% if was_validated %>
              <% if neighborhoodname_was_invalid %>
                <% neighborhoodname_class << " is-invalid" %>
              <% else %>
                <% neighborhoodname_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :neighborhoodname %>

            <%= f.text_field :neighborhoodname, :class => neighborhoodname_class, :placeholder => "Enter neighborhoodname" %>

            <% if neighborhoodname_was_invalid %>
              <% resource.errors.full_messages_for(:neighborhoodname).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          
          <div class="form-group">
            <% profile_image_was_invalid = resource.errors.include?(:profile_image) %>

            <% profile_image_class = "form-control" %>

            <% if was_validated %>
              <% if profile_image_was_invalid %>
                <% profile_image_class << " is-invalid" %>
              <% else %>
                <% profile_image_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :profile_image %>

            <%= f.file_field :profile_image, :class => profile_image_class %>

            <% if profile_image_was_invalid %>
              <% resource.errors.full_messages_for(:profile_image).each do |message| %>
                <div class="invalid-feedback">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          
          <div class="form-group">
            <% user_type_was_invalid = resource.errors.include?(:user_type) %>

            <% user_type_class = "form-control" %>

            <% if was_validated %>
              <% if user_type_was_invalid %>
                <% user_type_class << " is-invalid" %>
              <% else %>
                <% user_type_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :user_type %>

            <%= f.text_field :user_type, :class => user_type_class, :placeholder => "Enter user type" %>

            <% if user_type_was_invalid %>
              <% resource.errors.full_messages_for(:user_type).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          
          <div class="form-group">
            <% first_name_was_invalid = resource.errors.include?(:first_name) %>

            <% first_name_class = "form-control" %>

            <% if was_validated %>
              <% if first_name_was_invalid %>
                <% first_name_class << " is-invalid" %>
