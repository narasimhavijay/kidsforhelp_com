<div class="row">
  <div class="offset-md-3 col-md-6">
    <div class="card mb-3">
      <h5 class="card-header">
        Edit <%= resource_name.to_s.titleize %>
      </h5>

      <div class="card-body">
        <% was_validated = resource.errors.any? %>
        <% form_html_options = { method: :put, novalidate: true, class: "mb-3", multipart: true } %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: form_html_options) do |f| %>

          <% if flash[:notice].present? %>
            <div class="alert alert-info" role="alert">
              <%= flash[:notice] %>
            </div>
          <% end %>

          <% if flash[:alert].present? %>
            <div class="alert alert-danger" role="alert">
              <%= flash[:alert] %>
            </div>
          <% end %>

          <div class="form-group">
            <% email_was_invalid = resource.errors.include?(:email) %>

            <% email_class = "form-control" %>

            <% if was_validated %>
              <% if email_was_invalid %>
                <% email_class << " is-invalid" %>
              <% else %>
                <% email_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :email %>

            <%= f.email_field :email, autofocus: true, class: email_class %>

            <% if email_was_invalid %>
              <% resource.errors.full_messages_for(:email).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <small class="form-text text-muted">
                Currently awaiting confirmation for <%= resource.unconfirmed_email %>.
              </small>
            <% end %>
          </div>

          <div class="form-group">
            <% password_was_invalid = resource.errors.include?(:password) %>

            <% password_class = "form-control" %>

            <% if was_validated %>
              <% if password_was_invalid %>
                <% password_class << " is-invalid" %>
              <% else %>
                <% password_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password %>

            <%= f.password_field :password, class: password_class, autocomplete: "off" %>

            <% if password_was_invalid %>
              <% resource.errors.full_messages_for(:password).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>

            <small class="form-text text-muted">
              Leave blank if you don't want to change it.

              <% if @minimum_password_length %>
                <%= @minimum_password_length %> characters minimum.
              <% end %>
            </small>
          </div>

          <div class="form-group">
            <% password_confirmation_was_invalid = resource.errors.include?(:password_confirmation) %>

            <% password_confirmation_class = "form-control" %>

            <% if was_validated %>
              <% if password_confirmation_was_invalid %>
                <% password_confirmation_class << " is-invalid" %>
              <% else %>
                <% password_confirmation_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password_confirmation %>

            <%= f.password_field :password_confirmation, class: password_confirmation_class, autocomplete: "off" %>

            <% if password_confirmation_was_invalid %>
              <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% current_password_was_invalid = resource.errors.include?(:current_password) %>

            <% current_password_class = "form-control" %>

            <% if was_validated %>
              <% if current_password_was_invalid %>
                <% current_password_class << " is-invalid" %>
              <% else %>
                <% current_password_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :current_password %>

            <%= f.password_field :current_password, class: current_password_class, autocomplete: "off" %>

            <% if current_password_was_invalid %>
              <% resource.errors.full_messages_for(:current_password).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>

            <small class="form-text text-muted">
              We need your current password to confirm your changes.
            </small>
          </div>

          
          <div class="form-group">
            <% address_line1_was_invalid = resource.errors.include?(:address_line1) %>

            <% address_line1_class = "form-control" %>

            <% if was_validated %>
              <% if address_line1_was_invalid %>
                <% address_line1_class << " is-invalid" %>
              <% else %>
                <% address_line1_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :address_line1 %>

            <%= f.text_field :address_line1, :class => address_line1_class, :placeholder => "Enter address line1" %>

            <% if address_line1_was_invalid %>
              <% resource.errors.full_messages_for(:address_line1).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          
          <div class="form-group">
            <% address_line2_was_invalid = resource.errors.include?(:address_line2) %>

            <% address_line2_class = "form-control" %>

            <% if was_validated %>
              <% if address_line2_was_invalid %>
                <% address_line2_class << " is-invalid" %>
              <% else %>
                <% address_line2_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :address_line2 %>

            <%= f.text_field :address_line2, :class => address_line2_class, :placeholder => "Enter address line2" %>

            <% if address_line2_was_invalid %>
              <% resource.errors.full_messages_for(:address_line2).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          
          <div class="form-group">
            <% city_was_invalid = resource.errors.include?(:city) %>

            <% city_class = "form-control" %>

            <% if was_validated %>
              <% if city_was_invalid %>
                <% city_class << " is-invalid" %>
              <% else %>
                <% city_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :city %>

            <%= f.text_field :city, :class => city_class, :placeholder => "Enter city" %>

            <% if city_was_invalid %>
              <% resource.errors.full_messages_for(:city).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          
          <div class="form-group">
            <% state_was_invalid = resource.errors.include?(:state) %>

            <% state_class = "form-control" %>

            <% if was_validated %>
              <% if state_was_invalid %>
                <% state_class << " is-invalid" %>
              <% else %>
                <% state_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :state %>

            <%= f.text_field :state, :class => state_class, :placeholder => "Enter state" %>

            <% if state_was_invalid %>
              <% resource.errors.full_messages_for(:state).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          
          <div class="form-group">
            <% zipcode_was_invalid = resource.errors.include?(:zipcode) %>

            <% zipcode_class = "form-control" %>

            <% if was_validated %>
              <% if zipcode_was_invalid %>
